<% layout("/layout/boilerplate.ejs") %>
<div class="row">
    <div class="col-8  offset-2">
        <h1>Create New Listing</h1><hr>

        <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">

            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" placeholder="Title" class="form-control" required>
                <div class="valid-feedback">The Title looks good!</div>
                <div class="invalid-feedback">Required</div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea type="text" name="listing[description]" placeholder="Description" rows="7" cols="25" class="form-control" required></textarea>
                <div class="invalid-feedback">Required</div>
            </div>
            

            <div class="mb-3">
                <label for="image" class="form-label">Upload Image</label>
                <input type="file" name="listing[image]"  class="form-control" required >
                <div class="invalid-feedback">Required</div>
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listing[price]" placeholder="Price" class="form-control" required>
                    <div class="invalid-feedback">Required</div>
                </div>

                <div class="mb-4 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" placeholder="Country" class="form-control" required>
                    <div class="invalid-feedback">Required</div>
                </div>
            </div>
            
            

            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" placeholder="Location" class="form-control" required>
                <div class="invalid-feedback">Required</div>
            </div>
            
            <button class="btn btn-success">Create</button>
        </form>
    </div>
</div>

